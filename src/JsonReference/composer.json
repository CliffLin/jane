{
    "name": "jane/json-reference",
    "description": "A json reference implementation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Joel Wurtz",
            "email": "jwurtz@jolicode.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "league/uri": "^4.2",
        "php-jsonpointer/php-jsonpointer": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "symfony/serializer": "^2.3 || ^3.0"
    },
    "autoload": {
        "psr-4": {
            "Joli\\Jane\\JsonReference\\": "./"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    },
    "minimum-stability": "stable"
}
